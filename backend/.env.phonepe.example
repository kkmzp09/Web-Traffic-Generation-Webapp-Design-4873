# PhonePe Payment Gateway Configuration

# PhonePe Merchant ID (Get from PhonePe Dashboard)
PHONEPE_MERCHANT_ID=your_merchant_id_here

# PhonePe Salt Key (Get from PhonePe Dashboard)
PHONEPE_SALT_KEY=your_salt_key_here

# PhonePe Salt Index (Usually 1)
PHONEPE_SALT_INDEX=1

# Environment: 'production' or 'sandbox'
PHONEPE_ENV=sandbox

# Redirect URL after payment (where user lands after payment)
PHONEPE_REDIRECT_URL=https://organitrafficboost.com/payment-success

# Callback URL for PhonePe webhook (must be publicly accessible)
PHONEPE_CALLBACK_URL=https://api.organitrafficboost.com/api/payment/phonepe/callback

# Database connection (already configured)
DATABASE_URL=your_neon_postgresql_url_here
